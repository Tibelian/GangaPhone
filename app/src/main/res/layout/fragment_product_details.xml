<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="#000"
        android:layout_marginBottom="5dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/productDetails_Picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:alpha="0.8"
            android:src="@drawable/not_found_image"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@color/black_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/productDetails_PrevImg"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="&lt; PREV"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@color/background_secondary"
                android:layout_marginVertical="6dp"
                android:alpha="0.5"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/productDetails_NextImg"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="NEXT &gt;"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/productDetails_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:hint="title"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productDetails_Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="status" />

            <TextView
                android:id="@+id/productDetails_Location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="location"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@color/background_secondary"/>

        <TextView
            android:id="@+id/productDetails_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/productDetails_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:hint="date" />
        <TextView
            android:layout_marginBottom="10dp"
            android:textIsSelectable="true"
            android:id="@+id/productDetails_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description" />

        <TextView
            android:id="@+id/productDetails_Phone"
            android:textColor="@color/teal_700"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone" />
        <TextView
            android:id="@+id/productDetails_Email"
            android:textColor="@color/teal_700"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/productDetails_Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_secondary"
                android:textColor="@color/dark"
                android:textStyle="italic"
                android:layout_marginEnd="10dp"
                android:textSize="12dp"
                android:text="@string/share"/>
            <Button
                android:id="@+id/productDetails_ContactSeller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="@string/contact_seller" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>